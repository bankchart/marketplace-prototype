{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "post"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "detail": {
      "type": "richtext",
      "required": true
    },
    "keywords": {
      "type": "enumeration",
      "enum": [
        "product",
        "service"
      ],
      "default": "product",
      "required": true
    },
    "group": {
      "model": "group",
      "via": "posts"
    },
    "owner": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "comments": {
      "collection": "comment",
      "via": "post"
    },
    "categories": {
      "collection": "category",
      "via": "posts"
    },
    "price": {
      "type": "decimal"
    },
    "pictures": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
